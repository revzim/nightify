{
  "manifest_version": 2,

  "name": "Nightify",
  "description": "quick and dirty extension for nightifying mostly any webpage with one click.",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "index.html",
    "default_title": "Nightify this!"
  },
  "permissions": [
    "activeTab",
    "storage",
    "cookies",
    "*://*/*" 
  ]
}
